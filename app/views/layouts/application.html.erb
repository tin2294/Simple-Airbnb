<!DOCTYPE html>
<html>
  <head>
    <title>RailsSimpleAirbnb</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="row justify-content-between navbar navbar-expand-lg navbar-light bg-light">
      <%= link_to 'Simple Airbnb', flats_path %>
      <%= link_to 'Create new listing', new_flat_path, class: "btn btn-primary"%>
    </div>
    <%= yield %>
  </body>
</html>
