
<body>
<h1>All our Flats (<%= @flats.count %>)</h1>
  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-4">
        <div class="flat-card">
          <div class="flat-card-image" style="background-image: url('https://images.unsplash.com/photo-1494526585095-c41746248156?w=1200')"></div>
          <div class="flat-card-content">
            <div class="flat-card-title">
              <h4><%= flat.name %></h4>
            </div>
            <p><%= flat.address %></p>
            <div class="flex row justify-content-around">
              <div class="flex">
                <i class="fas fa-users"></i><span><%= flat.number_of_guests %></span>
              </div>
              <div class="flex mx-6">
                <i class="fas fa-euro-sign"></i> <%= flat.price_per_night %>
              </div>
            </div>
          </div>
          <div class="flat-card-actions">
            <%= link_to 'More Info', flat_path(flat) %>
            <%= link_to 'Edit', edit_flat_path(flat), class: "ml-3 text-warning" %>
            <%= link_to 'Remove', flat, class: "ml-3 text-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</body>
